---
// Component Imports
// import Tour from '../components/Tour.astro';
// You can import components from any supported Framework here!

import TestComponent from '../components/TestComponent.astro';
import Counter from '../components/Counter.jsx';
import '../components/Calc.js'
// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'My Astro Site';
let description = 'My Description';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width">
	<title>{title}</title>
	<meta name="description" content={description} />
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<style global>
		@import "../styles/global.css";
		@import "../styles/home.css";
	</style>

	<style>
		header {
			display: flex;
			flex-direction: column;
			gap: 1em;
			max-width: min(100%, 68ch);
		}
	</style>

	
</head>
<body>
	<main>
	Astro Component:
		<TestComponent title='Hi Feche:' number={234}/>
		<div style='margin-top: 1000px;'></div>
	React Component:
		<Counter client:visible />
		<div style='margin-top: 1000px;'></div>
	Web Component:
		<counter-js client:visible />
	</main>	
</body>
</html>
